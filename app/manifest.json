{
  "manifest_version": 2,

  "name": "Battlecode games",
  "description": "This extension shows how many games opened on wddx.ru.",
  "version": "0.1.0",

  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "images/icon.png"
    //NOTE для первого релиза, чтобы по клику переходили на сайт
    //"default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "lib/bullet.js",
      "lib/lodash.min.js",
      "scripts/background.js"
   ]
  }
}
